{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"] // Maps "@" to the root of your project
    },

    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "app/admin/categories/page.jsx", "app/utils/detectIOS.js", "components/ZoomableImage.jsx", "app/offers/page.jsx", "app/myaccount/myorders/page.jsx", "app/myaccount/myaddress/page.jsx", "app/myaccount/mypayments/page.jsx", "app/myaccount/myprofile/page.jsx", "app/myaccount/mywallet/page.jsx", "app/api/homeData.js"  ],
  "exclude": [
    "node_modules"
  ]
}
